<odoo>
  <data>
    <!--===================== -->
    <!-- Vistas Categoria -->
    <!--===================== -->

    <record model="ir.ui.view" id="view_categoria_list">
      <field name="name">restaurante.categoria.list</field>
      <field name="model">restaurante.categoria</field>
      <field name="arch" type="xml">
        <list string="Categoria">
          <field name="nombreCategoria"/>
        </list>
      </field>
    </record>

    <record id="view_categoria_form" model="ir.ui.view">
      <field name="name">restaurante.categoria.form</field>
      <field name="model">restaurante.categoria</field>
      <field name="arch" type="xml">
        <form string="Categoria">
          <header>
            <!--BOTON PARA PDF-->
            <button name="%(action_report_plato)d"
            string="Platos categoria"
            type="action"
            class="oe_highlight"
            icon="fa-print"/>
          </header>
          <sheet>
            <group>
              <field name="nombreCategoria"/>
            </group>
            <notebook>
              <page string="Platos">
                <field name="plato_id"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--===================== -->
    <!-- Vistas Plato -->
    <!--===================== -->

    <record id="view_plato_list" model="ir.ui.view">
      <field name="name">restaurante.plato.list</field>
      <field name="model">restaurante.plato</field>
      <field name="arch" type="xml">
        <list string="Plato">
          <field name="nombrePlato"/>
          <field name="tipoPlato"/>
          <field name="precioPlato"/>
        </list>
      </field>
    </record>

    <record id="view_plato_form" model="ir.ui.view">
      <field name="name">restaurante.plato.form</field>
      <field name="model">restaurante.plato</field>
      <field name="arch" type="xml">
        <form string="Plato">
          <sheet>
            <group>
              <field name="nombrePlato"/>
              <field name="tipoPlato"/>
              <field name="precioPlato"/>
              <field name="categoria_ids"/>
            </group>
            <notebook>
              <page string="Ingredientes">
                <field name="ingrediente_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!--========================-->
    <!-- Vistas Ingrediente -->
    <!--========================-->

    <record id="view_ingrediente_list" model="ir.ui.view">
      <field name="name">restaurante.ingrediente.list</field>
      <field name="model">restaurante.ingrediente</field>
      <field name="arch" type="xml">
        <list string="Ingrediente">
          <field name="nombreIngrediente"/>
          <field name="cantidadIngrediente"/>
        </list>
      </field>
    </record>

    <record id="view_ingrediente_form" model="ir.ui.view">
      <field name="name">restaurante.ingrediente.form</field>
      <field name="model">restaurante.ingrediente</field>
      <field name="arch" type="xml">
        <form string="Ingrediente">
          <sheet>
            <group>
              <field name="nombreIngrediente"/>
              <field name="cantidadIngrediente"/>
              <field name="plato_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!--========================-->
    <!-- Acciones -->
    <!--========================-->

    <record model="ir.actions.act_window" id="action_categoria">
      <field name="name">Categorías</field>
      <field name="res_model">restaurante.categoria</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_plato">
      <field name="name">Platos</field>
      <field name="res_model">restaurante.plato</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_ingrediente">
      <field name="name">Ingredientes</field>
      <field name="res_model">restaurante.ingrediente</field>
      <field name="view_mode">list,form</field>
    </record>

    <!--========================-->
    <!-- Menús -->
    <!--========================-->

    <menuitem id="menu_restaurante_root" name="Restaurante"/>

    <menuitem id="menu_restaurante_categoria" name="Categorías" parent="menu_restaurante_root" action="action_categoria"/>
    <menuitem id="menu_restaurante_plato" name="Platos" parent="menu_restaurante_root" action="action_plato"/>
    <menuitem id="menu_restaurante_ingrediente" name="Ingredientes" parent="menu_restaurante_root" action="action_ingrediente"/>

  </data>
</odoo>
